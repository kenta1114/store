<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="display-5">ショッピングカート</h1>
</div>

<% if @cart.cart_items.any? %>
  <div class="row">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <% @cart.cart_items.each do |item| %>
            <div class="row align-items-center mb-3 pb-3 border-bottom">
              <div class="col-md-2">
                <% if item.product.featured_image.attached? %>
                  <%= image_tag item.product.featured_image, class: "img-fluid rounded", style: "height: 80px; object-fit: cover;" %>
                <% else %>
                  <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 80px;">
                    <i class="fas fa-image text-muted"></i>
                  </div>
                <% end %>
              </div>
              
              <div class="col-md-4">
                <h6 class="mb-1"><%= link_to item.product.name, product_path(item.product), class: "text-decoration-none" %></h6>
                <small class="text-muted"><%= item.product.category %></small>
              </div>
              
              <div class="col-md-2 text-center">
                <span class="fw-bold">¥<%= number_with_delimiter(item.product.price.to_i) %></span>
              </div>
              
              <div class="col-md-2">
                <%= form_with url: update_quantity_cart_path, method: :patch, local: true, class: "d-flex" do |form| %>
                  <%= form.hidden_field :cart_item_id, value: item.id %>
                  <%= form.number_field :quantity, 
                      value: item.quantity,
                      min: 0,
                      max: item.product.inventory_count,
                      class: "form-control form-control-sm",
                      style: "width: 70px;",
                      onchange: "this.form.submit();" %>
                <% end %>
              </div>
              
              <div class="col-md-2 text-end">
                <div class="d-flex flex-column">
                  <span class="fw-bold text-primary">¥<%= number_with_delimiter(item.total_price.to_i) %></span>
                  <%= link_to remove_item_cart_path(cart_item_id: item.id), 
                      method: :delete,
                      class: "btn btn-outline-danger btn-sm mt-1",
                      data: { turbo_confirm: "削除しますか？" } do %>
                    <i class="fas fa-trash-alt"></i>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">注文概要</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between mb-2">
            <span>商品数:</span>
            <span><%= @cart.total_items %>個</span>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>小計:</span>
            <span>¥<%= number_with_delimiter(@cart.total_price.to_i) %></span>
          </div>
          <div class="d-flex justify-content-between mb-2">
            <span>送料:</span>
            <span>¥500</span>
          </div>
          <hr>
          <div class="d-flex justify-content-between mb-3">
            <strong>合計:</strong>
            <strong class="text-primary">¥<%= number_with_delimiter((@cart.total_price + 500).to_i) %></strong>
          </div>
          
          <div class="d-grid">
            <button class="btn btn-primary btn-lg mb-2">
              <i class="fas fa-credit-card"></i> 注文に進む
            </button>
          </div>
          
          <%= link_to products_path, class: "btn btn-outline-secondary btn-sm" do %>
            <i class="fas fa-arrow-left"></i> 買い物を続ける
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="text-center py-5">
    <i class="fas fa-shopping-cart fa-5x text-muted mb-4"></i>
    <h3 class="text-muted">カートは空です</h3>
    <p class="text-muted mb-4">商品をカートに追加してください。</p>
    <%= link_to products_path, class: "btn btn-primary btn-lg" do %>
      <i class="fas fa-shopping-bag"></i> ショッピングを始める
    <% end %>
  </div>
<% end %>
