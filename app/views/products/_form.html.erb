<%= form_with model: @product, local: true, class: "space-y-6" do |form| %>
  <% if @product.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4">
      <div class="flex items-center mb-2">
        <i class="fas fa-exclamation-triangle text-red-500 mr-2"></i>
        <h3 class="font-semibold text-red-800">エラーがあります:</h3>
      </div>
      <ul class="list-disc list-inside text-red-700 text-sm space-y-1">
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-6">
      <div>
        <%= form.label :name, "商品名 *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :name, 
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @product.errors[:name].any?}",
            placeholder: "商品名を入力してください",
            required: true %>
        <% if @product.errors[:name].any? %>
          <p class="text-red-600 text-sm mt-1"><%= @product.errors[:name].first %></p>
        <% end %>
      </div>

      <div>
        <%= form.label :category, "カテゴリ *", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :category,
            options_for_select([
              ['エレクトロニクス', 'エレクトロニクス'],
              ['ファッション', 'ファッション'],
              ['ホーム＆キッチン', 'ホーム＆キッチン'],
              ['スポーツ＆アウトドア', 'スポーツ＆アウトドア'],
              ['本・雑誌', '本・雑誌'],
              ['美容・健康', '美容・健康'],
              ['その他', 'その他']
            ], @product.category),
            { prompt: 'カテゴリを選択してください' },
            { class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @product.errors[:category].any?}", required: true } %>
        <% if @product.errors[:category].any? %>
          <p class="text-red-600 text-sm mt-1"><%= @product.errors[:category].first %></p>
        <% end %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <%= form.label :price, "価格 (円) *", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <div class="relative">
            <span class="absolute left-3 top-2 text-gray-500">¥</span>
            <%= form.number_field :price,
                class: "w-full pl-8 pr-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @product.errors[:price].any?}",
                placeholder: "0",
                min: 1,
                step: 1,
                required: true %>
          </div>
          <% if @product.errors[:price].any? %>
            <p class="text-red-600 text-sm mt-1"><%= @product.errors[:price].first %></p>
          <% end %>
        </div>

        <div>
          <%= form.label :inventory_count, "在庫数 *", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.number_field :inventory_count,
              class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @product.errors[:inventory_count].any?}",
              placeholder: "0",
              min: 0,
              required: true %>
          <% if @product.errors[:inventory_count].any? %>
            <p class="text-red-600 text-sm mt-1"><%= @product.errors[:inventory_count].first %></p>
          <% end %>
        </div>
      </div>

      <div>
        <%= form.label :description, "商品説明", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.rich_text_area :description, 
            class: "w-full border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
            placeholder: "商品の詳細な説明を入力してください" %>
        <p class="text-gray-500 text-sm mt-2">商品の特徴、仕様、使用方法などを詳しく記載してください。</p>
      </div>
    </div>

    <div class="space-y-6">
      <div>
        <%= form.label :featured_image, "商品画像", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.file_field :featured_image, 
            accept: "image/*",
            class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 #{'border-red-300 focus:ring-red-500 focus:border-red-500' if @product.errors[:featured_image].any?}" %>
        <p class="text-gray-500 text-sm mt-2">JPG、PNG、GIF形式の画像ファイルをアップロードしてください。</p>
        <% if @product.errors[:featured_image].any? %>
          <p class="text-red-600 text-sm mt-1"><%= @product.errors[:featured_image].first %></p>
        <% end %>
      </div>

      <% if @product.featured_image.attached? %>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-2">現在の画像</label>
          <div class="border border-gray-300 rounded-lg p-3 bg-gray-50">
            <%= image_tag @product.featured_image, class: "w-full rounded-lg" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex justify-between pt-6 border-t border-gray-200">
    <%= link_to products_path, 
         class: "inline-flex items-center bg-gray-100 hover:bg-gray-200 text-gray-800 px-6 py-2 rounded-lg font-medium transition-colors" do %>
      <i class="fas fa-arrow-left mr-2"></i>キャンセル
    <% end %>
    
    <%= form.submit @product.new_record? ? "商品を作成" : "商品を更新", 
         class: "inline-flex items-center bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-medium transition-colors" %>
  </div>
<% end %>